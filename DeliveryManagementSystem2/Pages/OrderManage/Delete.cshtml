@page
@model DeliveryManagementSystem2.Pages.OrderManage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        background-color: #f7f7f7; /* Light gray background */
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .container {
        width: 80%;
        margin: 20px auto;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    h1, h3 {
        color: #333333;
    }

    .btn-danger {
        background-color: #d9534f;
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn-danger:hover {
            background-color: #c9302c;
        }

    a {
        color: #0275d8;
        text-decoration: none;
        font-weight: bold;
    }

        a:hover {
            text-decoration: underline;
        }

    .row {
        margin-bottom: 10px;
    }

    .col-sm-2 {
        font-weight: bold;
    }

    .col-sm-10 {
        color: #555555;
    }

    .hr-line {
        margin: 15px 0;
        border-top: 1px solid #eeeeee;
    }
</style>
<div class="container">
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Order</h4>
        <div class="hr-line"></div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Order.OrderNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Order.OrderNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Order.CustomerName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Order.CustomerName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Order.OrderDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Order.OrderDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Order.OrderStatus)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Order.OrderStatus)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Order.DeliveryAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Order.DeliveryAddress)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Order.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index">Back to List</a>
        </form>
    </div>
</div>