@page
@model DeliveryManagementSystem2.Pages.OrderManage.DetailsModel

@{
    ViewData["Title"] = "Details";
}
    <style >
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f9f9f9;
        color: #333;
    }

    h1 {
        color: #444;
        text-align: center;
        margin-top: 20px;
    }

    h4 {
        color: #555;
        text-align: center;
        font-weight: bold;
        margin-bottom: 10px;
    }

    hr {
        border: 0;
        height: 1px;
        background: #ddd;
        margin: 10px auto;
        width: 80%;
    }

    dl {
        width: 80%;
        margin: 20px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    dt {
        font-weight: bold;
        color: #555;
    }

    dd {
        margin-left: 0;
        margin-bottom: 15px;
    }

    .col-sm-2 {
        font-weight: bold;
        color: #666;
        text-transform: capitalize;
    }

    .col-sm-10 {
        color: #444;
        background-color: #f7f7f7;
        padding: 8px 12px;
        border-radius: 4px;
    }

    div a {
        text-decoration: none;
        color: #007bff;
        font-weight: bold;
        padding: 8px 12px;
        border: 1px solid #007bff;
        border-radius: 5px;
        transition: all 0.3s ease;
        margin-right: 10px;
    }

        div a:hover {
            background-color: #007bff;
            color: #fff;
        }

    div {
        text-align: center;
        margin-top: 20px;
    }
</style>
<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.CustomerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.CustomerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.DeliveryAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.DeliveryAddress)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Order.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
